<h1>Edit project</h1>

<%= form_for(@project) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :discription %><br />
    <%= f.text_area :discription %>
  </div>
    <div class="actions">
    <%= f.submit "update" %>
  </div>
<% end %>