<h1>Edit record</h1>

<%= form_for @record do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
      <%= f.label :project %><br />
      <%= f.select :project_id, Project.all.collect {|project| [project.name, project.id]}, {}%>
    </div>
    <div class="field">
      <%= f.label :activity %><br />
      <%= f.select :activity_id, Activity.all.collect {|activity| [activity.name, activity.id]}, {}%>
    </div>
    <div class="field">
      <%= f.label :hours %>
      <%= f.select :hours, (0..23).each.collect{ |hour| [hour, hour] } %>
      <%= f.label :minutes %>
      <%= f.select :minutes, (0..59).each.collect{ |minute| [minute, minute] } %>
    </div>
    <div class="field">
      <%= f.label :discription %><br />
      <%= f.text_area :discription %>
    </div>
    <div class="actions">
      <%= f.submit "update" %>
    </div>
<% end %>